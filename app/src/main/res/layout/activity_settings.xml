<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chats_bg"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:tint="@color/colorPrimary"
        android:layout_margin="20dp"
        android:elevation="12dp"
        android:src="@drawable/back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/back_btn">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profle_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            app:civ_border_width="1dp"
            android:elevation="12dp"
            android:src="@drawable/wfive"
            app:civ_border_color="@color/colorPrimary" />

        <ImageView
            android:id="@+id/add_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-40dp"
            android:elevation="12dp"
            android:src="@drawable/addphoto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="15dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/text_normal"
                android:textSize="18sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="4"
                android:hint="Write here"
                android:padding="5dp"
                android:textColor="@color/text_normal"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="@color/text_normal"
                android:textSize="18sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_about"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Write your status here"
                android:padding="5dp"
                android:textColor="@color/text_normal"
                android:textSize="18sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_btn"
            android:elevation="12dp"
            android:padding="2dp"
            android:text="Save"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_normal"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_linear"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/privacy"
                android:drawablePadding="10dp"
                android:drawableTint="@color/bg_bubble_receiver"
                android:gravity="center"
                android:padding="5dp"
                android:text="Privacy Policy"
                android:textColor="@color/bg_bubble_receiver"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/aboutus"
                android:drawablePadding="10dp"
                android:drawableTint="@color/bg_bubble_receiver"
                android:gravity="center"
                android:padding="5dp"
                android:text="About us"
                android:textColor="@color/bg_bubble_receiver"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/invite"
                android:drawablePadding="10dp"
                android:drawableTint="@color/bg_bubble_receiver"
                android:gravity="center"
                android:padding="5dp"
                android:text="Invite a friend"
                android:textColor="@color/bg_bubble_receiver"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/notification"
                android:drawablePadding="10dp"
                android:drawableTint="@color/bg_bubble_receiver"
                android:gravity="center"
                android:padding="5dp"
                android:text="Notifications"
                android:textColor="@color/bg_bubble_receiver"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/help"
                android:drawablePadding="10dp"
                android:drawableTint="@color/bg_bubble_receiver"
                android:gravity="center"
                android:padding="5dp"
                android:text="help"
                android:textColor="@color/bg_bubble_receiver"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>